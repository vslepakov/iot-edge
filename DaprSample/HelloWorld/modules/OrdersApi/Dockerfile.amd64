FROM node:8-stretch-slim

WORKDIR /app/

COPY package*.json ./

RUN npm install --production

COPY app.js runWithDapr.sh ./
COPY components ./components/

RUN chmod +x runWithDapr.sh

RUN apt-get update \
    && apt-get install -y procps \
    && rm -rf /var/lib/apt/lists/*

RUN wget https://github.com/dapr/dapr/releases/download/v0.8.0/daprd_linux_amd64.tar.gz
RUN tar -zxvf daprd_linux_amd64.tar.gz

ENV PATH /app:$PATH

CMD ["/bin/bash", "runWithDapr.sh", "nodeapp", "8181"]
